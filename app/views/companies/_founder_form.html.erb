<a class="waves-effect waves-light btn modal-trigger" href="#modal1">Add Founder</a>
<div id="modal1" class="modal">
  <%= form_tag(add_founder_company_url, multipart: true) do %>
  <div class="modal-content">
    <h4>Add founder</h4>
    <div class="row">
      <div class="input-field col s12">
        <%= text_field(:founder, :fullname, size: 20) %>
        <%= label_tag :fullname %>
      </div>
      <div class="input-field col s12">
        <%= text_field(:founder, :title, size: 20) %>
        <%= label_tag :title %>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button class="btn waves-effect waves-light" type="submit" name="action">Submit</button>
  </div>
  <% end %>
</div>
